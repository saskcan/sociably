<h1>
	<%= @subscription.task.name %>
</h1>

<p>
	<%= @subscription.task.description %>
</p>

<p>
  <strong>Progress:</strong>
  <%= form_for @subscription do |f| %>
  	<%= f.number_field(:progress, in: 0.0..1.0, step: 0.05) %>
  	<%= f.submit %>
  <% end %>
</p>

<%= link_to 'Back to User', user_path(@subscription.user) %>
