%h1
  Listing Books

%table
  %thead
    %tr
      %th Title
      %th ISBN
      %th Edition
      %th Date of Publishing
      %th Publisher
      %th
      %th
      %th
  %tbody
    - @books.each do |book|
      %tr
        %td= book.title
        %td= book.isbn
        %td= book.edition
        %td= book.publish_date
        %td= book.publisher_name
        %td= link_to 'Show', book
        %td= link_to 'Edit', edit_book_path(book)
        %td= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure? '}

= link_to 'New Book', new_book_path
